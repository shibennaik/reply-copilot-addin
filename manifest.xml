<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:type="MailApp">
  <Id>f5e84f06-1a7a-42b9-9b7d-9f12b7c1c0aa</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Your Company</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Reply Copilot for Outlook"/>
  <Description DefaultValue="Auto-draft replies and learn your style from Sent Items." />
  <IconUrl DefaultValue="https://yourcdn/asset/icon-32.png"/>
  <HighResolutionIconUrl DefaultValue="https://yourcdn/asset/icon-64.png"/>

  <!-- Office requirement sets -->
  <Requirements>
    <!-- Mailbox 1.11+ recommended for modern compose APIs; 1.13+ for some events -->
    <Sets DefaultMinVersion="1.11">
      <Set Name="Mailbox"/>
    </Sets>
  </Requirements>

  <!-- SSO -->
  <WebApplicationInfo>
    <Id>YOUR-AAD-APP-CLIENT-ID</Id>
    <Resource>api://YOUR-AAD-APP-CLIENT-ID</Resource>
    <Scopes>
      <Scope>openid</Scope>
      <Scope>profile</Scope>
      <Scope>offline_access</Scope>
      <Scope>Mail.Read</Scope>
    </Scopes>
  </WebApplicationInfo>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <!-- Commands surface -->
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.1" xsi:type="VersionOverridesV1_1">
    <Requirements>
      <Sets DefaultMinVersion="1.11">
        <Set Name="Mailbox"/>
      </Sets>
    </Requirements>

    <Hosts>
      <Host xsi:type="Mailbox">
        <DesktopFormFactor>
          <FunctionFile resid="resid.FunctionFile.Url"/>

          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgread.group" label="Reply Copilot">
                <Control xsi:type="Button" id="msgread.replyWithCopilot">
                  <Label resid="resid.Button.Label"/>
                  <Supertip>
                    <Title resid="resid.Button.Label"/>
                    <Description resid="resid.Button.Desc"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="icon16"/>
                    <bt:Image size="32" resid="icon32"/>
                    <bt:Image size="80" resid="icon80"/>
                  </Icon>
                  <Action xsi:type="ExecuteFunction">
                    <FunctionName>replyWithCopilot</FunctionName>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>

          <ExtensionPoint xsi:type="MessageComposeCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="compose.group" label="Reply Copilot">
                <Control xsi:type="Button" id="compose.regenerate">
                  <Label resid="resid.Compose.Label"/>
                  <Supertip>
                    <Title resid="resid.Compose.Label"/>
                    <Description resid="resid.Compose.Desc"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="icon16"/>
                    <bt:Image size="32" resid="icon32"/>
                    <bt:Image size="80" resid="icon80"/>
                  </Icon>
                  <Action xsi:type="ExecuteFunction">
                    <FunctionName>regenerateDraft</FunctionName>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>

          <!-- Event-based: trigger on Reply/New/Forward -->
          <ExtensionPoint xsi:type="LaunchEvent">
            <LaunchEvents>
              <LaunchEvent Type="OnNewMessageCompose" FunctionName="onNewMessageCompose" />
              <LaunchEvent Type="OnMessageSend" FunctionName="onMessageSend" />
            </LaunchEvents>
          </ExtensionPoint>

          <Page resid="resid.Taskpane.Url"/>
        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0">
      <bt:Images>
        <bt:Image id="icon16" DefaultValue="https://yourcdn/asset/icon-16.png"/>
        <bt:Image id="icon32" DefaultValue="https://yourcdn/asset/icon-32.png"/>
        <bt:Image id="icon80" DefaultValue="https://yourcdn/asset/icon-80.png"/>
      </bt:Images>
      <bt:Urls>
        <bt:Url id="resid.FunctionFile.Url" DefaultValue="https://yourapp/commands.html"/>
        <bt:Url id="resid.Taskpane.Url" DefaultValue="https://yourapp/taskpane.html"/>
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="resid.Button.Label" DefaultValue="Reply with Copilot"/>
        <bt:String id="resid.Compose.Label" DefaultValue="Regenerate Draft"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="resid.Button.Desc" DefaultValue="Open a reply with an AIâ€‘drafted response."/>
        <bt:String id="resid.Compose.Desc" DefaultValue="Regenerate a reply tailored to your style."/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>